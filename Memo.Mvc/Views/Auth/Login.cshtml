@model Memo.Mvc.RequestModels.LoginRequestModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h2>Authorization</h2>

<form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
    <div>
        <p>
            <label asp-for="Email">Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </p>
        <p>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </p>
        <p>
            <input type="submit" value="Log In"  />
        </p>
    </div>
</form>

<a asp-action="Register" asp-controller="Auth">Don't have an account yet? Register</a>